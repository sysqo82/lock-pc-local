# Docker Environment Configuration
# This file is used when running with docker-compose

# Database Configuration (connects to postgres container)
DB_HOST=postgres
DB_PORT=5432
DB_USER=lockpc_user
DB_PASSWORD=lockpc_password
DB_DATABASE=lockpc_db

# Session Secret (change this to a random string)
SESSION_SECRET=your-super-secret-session-key-change-me

# Node Environment (development for local Docker, production for cloud)
NODE_ENV=development
PORT=3000
